// Seleciona os elementos principais
const caixaprincipal = document.querySelector(".caixa-principal");
const caixapergunta = document.querySelector(".caixa-pergunta");
const caixaalternativa = document.querySelector(".caixa-alternativa");
const caixaresultado = document.querySelector(".caixa-resultado");

// Lista de perguntas
const perguntas = [
    {
        enunciado: "A IA substituir√° completamente alguns trabalhos humanos?",
        alternativas: ["Sim", "N√£o"]
    },
    {
        enunciado: "A IA ser√° capaz de desenvolver consci√™ncia pr√≥pria?",
        alternativas: ["Sim", "N√£o"]
    },
    {
        enunciado: "O uso da IA na educa√ß√£o ser√° mais comum no futuro?",
        alternativas: ["Sim", "N√£o"]
    },
    {
        enunciado: "A IA representar√° um risco para a seguran√ßa global?",
        alternativas: ["Sim", "N√£o"]
    },
    {
        enunciado: "A IA poder√° criar arte indistingu√≠vel da arte humana?",
        alternativas: ["Sim", "N√£o"]
    }
];

// Controle da l√≥gica
let indiceAtual = 0;
let historiaFinal = "";

// Mostra a pergunta atual
function mostrarPergunta() {
    if (indiceAtual < perguntas.length) {
        const perguntaAtual = perguntas[indiceAtual];
        caixapergunta.textContent = perguntaAtual.enunciado;
        mostrarAlternativas(perguntaAtual);
    } else {
        mostrarResultado();
    }
}

// Mostra os bot√µes de alternativas
function mostrarAlternativas(perguntaAtual) {
    caixaalternativa.innerHTML = ""; // limpa as alternativas anteriores
    perguntaAtual.alternativas.forEach(alternativa => {
        const botao = document.createElement("button");
        botao.textContent = alternativa;
        botao.classList.add("botao-alternativa");
        botao.addEventListener("click", () => respostaSelecionada(alternativa));
        caixaalternativa.appendChild(botao);
    });
}

// Quando o usu√°rio escolhe uma resposta
function respostaSelecionada(opcao) {
    historiaFinal += `Voc√™ respondeu "${opcao}" na pergunta ${indiceAtual + 1}. `;
    indiceAtual++;
    mostrarPergunta();
}

// Exibe o resultado final
function mostrarResultado() {
    caixapergunta.textContent = "O futuro chegou... üåç";
    caixaalternativa.innerHTML = "";
    caixaresultado.textContent = historiaFinal + "Agora, o futuro est√° em suas m√£os!";
    caixaresultado.classList.add("mostrar");
}

// Inicia o quiz
mostrarPergunta();

