const caixaprincipal = document.querySelector(".caixa-principal");
const caixapergunta = document.querySelector(".caixa-pergunta");
const caixaalternativa = document.querySelector(".caixa-alternativa");
const caixaresultado = document.querySelector(".caixa-resultado");

const pergunta = [
    {
        enunciado: "A IA substituirá completamente alguns trabalhos humanos.",
        alternativas: ["Sim", "Não"]
    },
    {
        enunciado: "A IA será capaz de desenvolver por consciência própria?",
        alternativas: ["Sim", "Não"]
    },
    {
        enunciado: "O uso da IA na educação será mais comum no futuro?",
        alternativas: ["Sim", "Não"]
    },
    {
        enunciado: "A IA representará um risco para a segurança global?",
        alternativas: ["Sim", "Não"]
    },
    {
        enunciado: "A IA poderá criar arte indistinguível da arte humana?",
        alternativas: ["Sim", "Não"]
    }
];

let atual = 0;
let historiafinal = "";

function mostrapergunta() {
    const perguntaAtual = pergunta[atual];
    caixapergunta.textContent = perguntaAtual.enunciado;
    mostraalternativa(perguntaAtual);
}

function mostraalternativa(perguntaAtual) {
    caixaalternativa.innerHTML = ""; // Limpa as alternativas anteriores
    for (const alternativa of perguntaAtual.alternativas) {
        const botaoAlternativa = document.createElement("button");
        botaoAlternativa.textContent = alternativa;
        botaoAlternativa.onclick = () => respostaselecionada(alternativa);
        caixaalternativa.appendChild(botaoAlternativa);
    }
}

function respostaselecionada(opcaoSelecionada) {
    historiafinal += `Você escolheu: ${opcaoSelecionada}. `;
    atual++;
    
    if (atual < pergunta.length) {
        mostrapergunta();
    } else {
        mostraResultado();
    }
}

function mostraResultado() {
    caixapergunta.textContent = "Em 2049...";
    caixaresultado.textContent = historiafinal;
    caixaalternativa.textContent = "";
}

// Iniciar o jogo
mostrapergunta();
